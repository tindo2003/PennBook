        <div class="container-fluid search-bar">
           
            <div class="search-input mx-auto mt-3">
                <form class="d-flex" id="search-section" role="search">

                    <div class="form-group">
                        <input class="form-control me-2" id="search" type="search" placeholder="Search Facebook" aria-label="Search">
                    </div>
    
    
                    <button type="submit" ><img src="/img/search.png"></button>
                </form>
                
                <div class="autocom-box">
                </div>
            </div> 
                
        </div>

        
        <div class="container">
            
            <div class="row">

                <!-- Left panel -->
                <div class="col-5">
                    <div class="container mt-5 mb-5">
                        <div class="align-items-center text-left p-2 bg-white px-3">
                            <div id="nameOfUser">
                                <h5>Kristine Yip</h5>
                            </div>

                            <div class="d-flex mt-3 mb-4 border-bottom">
                                <i class="fa-solid fa-globe fa-fw"></i>
                                <span class="pl-2">
                                    <h6>Intro</h6>
                                </span>
                            </div>

                            <div>
                                <p>Affiliation: UPenn<p></p>
                                <p>Interest: Soccer and Programming</p>
                                <a href="#"> Friend Visualizer</a>
                            </div>
                            
                        </div>
                    </div>
                </div>





                <!-- Right panel -->
                <div class="col-7">
                    <div class="container mt-5 mb-2">

                        <div class="d-flex justify-content-center row">
                            <!--post section-->
                           
                            <div class="align-items-center text-left comment-top p-2 bg-white border-bottom px-4">
                                            
                                <!--The post itself-->
                                <div id="nameOfPoster">
                                    <h6>Tin Do</h6>
                                </div>
                                <div id="dateOfPost">
                                    <p>Posted on 1/3/2022</p>
                                </div>
                                <div id="contentOfPost">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et 
                                        dolore magna aliqua. </p>
                                </div>
                                <!--Post stats-->
                                <div class="d-flex justify-content-between">
                                    <p>10 likes</p>
                                    <p>25 comments</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-around pt-1 bg-white border-bottom">
                                <div class="d-flex like-div">
                                    <span class="clickable">
                                        <i class="fa-sharp fa-solid fa-thumbs-up" id="like"></i>
                                    </span>
                                    
                                    <p>Like</p>
                                </div>
                                
                                <a href="#">Comment</a>
                            </div>

                            <div class="bg-white p-2 px-4">
                                
                                <div class="commented-section mt-2">
                                    <div class="d-flex flex-row align-items-center commented-user">
                                        <h6 class="mr-2">Ethan Ma</h6>
                                        <span class="dot mb-1"></span>
                                        <span class="mb-1 ml-2">4 hours ago</span>
                                    </div>
                                    <div class="comment-text-sm"><span>Hello world!</span></div>
                                </div>

                                <!--Comment section-->
                                <div class=reaction-section>
                                    
                                    <div class="d-flex flex-row mt-4 mb-4">
                                        <input type="text" class="form-control mr-3" placeholder="Write a comment">
                                        <button class="btn btn-primary" type="button">Comment</button>
                                    </div>
                                </div>
                            </div>
                
                        </div>
                    </div>
                </div>
                
            </div>
            </div>
        </div>

       
