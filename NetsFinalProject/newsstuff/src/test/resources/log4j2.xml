<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c:%L - %m%n" />
    </Console>
  </Appenders>

  <Loggers>
    <Root level="WARN">
      <AppenderRef ref="ConsoleAppender"/>
    </Root>
    <Logger name="com.amazonaws.services" level="WARN" />
    <Logger name="org.apache.spark" level="INFO" />
    <Logger name="com.amazonaws.AmazonWebServiceClient" level="WARN" />
    <Logger name="com.amazonaws.services.dynamodbv2.local.server.LocalDynamoDBServerHandler" level="ERROR" />
  </Loggers>
</Configuration>